<fieldset>
  <div class="form-group">
    <%= f.label :first_name, "First name", class: 'sr-only' %>
    <%= f.text_field :first_name, class: 'form-control', placeholder: 'First name' %>
  </div>
  <div class="form-group">
    <%= f.label :last_name, "Last name", class: 'sr-only' %>
    <%= f.text_field :last_name, class: 'form-control', placeholder: 'Last name' %>
  </div>
  <div class="form-group">
    <%= f.label :email, "Email address", class: 'sr-only' %>
    <%= f.email_field :email, class: 'form-control', placeholder: 'Email address', size: 40 %>
  </div>
  <div class="form-group">
    <%= f.label :konnection, "Connection to the Bride", class: 'sr-only' %>
    <%= f.text_field :konnection, class: 'form-control', placeholder: 'Connection to the Bride' %>
  </div>
  <div class="form-group">
    <%= f.hidden_field :_destroy %>
    <%= link_to "remove", '#', class: "remove_fields" %>
  </div>
</fieldset>