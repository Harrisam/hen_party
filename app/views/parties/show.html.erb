<p id="notice"><%= notice %></p>

<p class="lead"><%=@party.name.capitalize%>'s Hen Party</p>

<h3>Participants</h3>
<ul><% @party.participants.each do |f| %>
	
	<%= content_tag :li, f.email %>
	<%= content_tag :li, f.first_name + " " + f.last_name %>

	<% end %>
</ul>

<h3>Budgets</h3>
<ul><% @party.budgets.each do |f| %>	
	<%= content_tag :li, f.amount %>
	<% end %>
</ul>

<h3>Dates</h3>
<ul><% @party.date_options.each do |f| %>
	<%= content_tag :li, f.start_date  + " " + f.end_date%>
	<% end %>
</ul>

