  <div class="btn-group">
    <%= link_to 'Add Options', edit_party_path(@party), class: 'btn btn-default btn-lg' %>
      <% if @party.participants.count > 0 %>
       <%= link_to 'Invite Hens', new_party_invitation_path(@party), class: 'btn btn-default btn-lg' %>
      <% end %>
      <%= link_to 'Plan this party', plan_party_path(@party), class: 'btn btn-default btn-lg' %>
    </div>

  <h1><%=@party.name.capitalize%> </h1>
  
  <div class="flex-grid">
		<div>
      <h2>Budgets</h2>
				<% @party.budgets.each do |f| %>
					<div>	Â£<%= f.amount %></div>
				<% end %>
    </div>

   <div>
      <h2>Dates</h2>
				<% @party.date_options.each do |f| %>
					<div><%= f.start_date.strftime('%a %d %b %Y') %> - <%= f.end_date.strftime('%a %d %b %Y') %></div>
				<% end %>
    </div>
  </div>
  <div class="flex-grid">
    <div>
      <h2>Hens</h2>
        <% @party.participants.each do |f| %>
          <p><%= f.email %> | <%= [f.first_name, f.last_name].join ' ' %> | <%= f.konnection %></p>
        <% end %>   
    </div>
  	<div>
      <h2>Your contact details</h2>
        <p><%= [current_user.first_name, current_user.last_name].join ' ' %>
        <p><%= current_user.email%></p>
