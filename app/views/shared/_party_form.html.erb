<%= form_for(@party) do |f| %>
  
  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name, :autofocus => true %>
  </div>

  <%= fields_for :users do |user_f| %>
    <div>
      <%= user_f.label :email %><br />
      <%= user_f.email_field :email %>
    </div>
    <div>
      <%= user_f.label :password %><br />
      <%= user_f.password_field :password %>
    </div>
    <div>
      <%= user_f.label :password_confirmation %><br />
      <%= user_f.password_field :password_confirmation %>
    </div>
  <% end %>

    <%= fields_for :budgets do |party_b| %>
    <div>
      <%= party_b.label :amount, 'Budget' %><br />
      <%= party_b.text_field :amount %>

    </div>
  	<% end %>
  <%= f.hidden_field :party_id, value: @party.id %>
  <%= f.hidden_field :user_id, value: current_user.id %>	
 
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
